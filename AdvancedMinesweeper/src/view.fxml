	stylesheets="@styles.css">
	<top>
		<HBox>
			<VBox>
				<Label styleClass="inputLabel" text="SizeX"/>
   				<TextField fx:id="inputX" styleClass="inputField"/>
   			</VBox>
   			<VBox>
				<Label styleClass="inputLabel" text="SizeY"/>
   				<TextField fx:id="inputY" styleClass="inputField"/>
